<div class="column">
  <div class="column">
    <div class="column is-4"> 
    </div>

    <div class="column is-half is-offset-one-quarter is-centered">
         <h1 class="title is-1 is-centered">Login directly !</h1>
    </div>

 <div class="column">
    <div class="column is-4"> 
    </div>

    <div class="column is-half is-offset-one-quarter"> 
      <div class="box">
       <form action="/auth/login" method="POST" id="form-container">


        <div class="field">
          <p class="control has-icons-right">
            <input class="input is-success" type="text" name="username" placeholder="Your  username">
               <span class="icon is-small is-right">
                <i class="fas fa-check"></i>
             </span>
          </p>
        </div>

        <div class="field">
          <p class="control has-icons-right">
            <input class="input is-warning" type="password" name="password" placeholder="Your password">
               <span class="icon is-small is-right">
                <i class="fas fa-check"></i>
             </span>
            </p>
        </div>

          {{#if message }}
              <div class="error-message">{{ message }}</div>
          {{/if}}

          <div class="buttons is-centered">
            <button class="button is-success is-centered">Login !</button>
          </div>        
        </form>
      
          {{!-- <div class="buttonsis-right "></div>
           <button  class="button is-primary is-right" href="/auth/signup">Or create your account today !</button>
          </div>  --}}
      
      </div>
    </div>

    <div class="column is-4"> 
    </div>

</div>


