{{!-- titre  --}}

<div class="columns">
   <div class="column is-2"> 
    </div>
</div>

<div class="column">       
     <h3 class="title is-3 is-centered">Quotations List</h3>
</div>

<div class="columns">
   <div class="column is-2"> 
    </div>
</div>
{{!-- colonnes   --}}

  <div class="columns is-desktop">
      <div class="box">
        <table class="table">
          <div class="columns has-text-centered has-text-weight-bold is-line-height is-hidden-mobile" height="30">
              <div class="column">
                Quotation number
              </div>
            
              <div class="column">
                Customer       
              </div>
          
              <div class="column ">
                Amount 
              </div>
    
              <div class="column ">
                Establishment date
              </div>
        
              <div class="column ">
                Accepted
              </div>
          </div>

      {{#each quotationsList}}
        <div class="columns has-text-centered is-gapless tr" height="20">
            <div class="column">
              {{this.quotationNumber}}
            </div>
          
            <div class="column">
              {{this.customer.firstName}} {{this.customer.lastName}}     
            </div>
        
            <div class="column is-hidden-mobile">
              {{this.amount}}
            </div>
  
            <div class="column is-hidden-mobile">
              {{this.convertedDate}}
            </div>
       
            <div class="column is-hidden-mobile">
              {{#if this.accepted}} Yes {{else}} No {{/if}}
            </div>
        </div>
          {{/each}}  
    </div>  
  </div> 
<div class="columns">
   <div class="column is-2"> 
    </div>
</div>

{{!-- bouton   --}}
<div class="columns">
    <div class="column is-2"> 
      <a class="button is-link is-focused is-centered" href="/quotations/new">
        <h2>New Quotation</h2>
      </a>  
    </div>
  </div>


{{!-- pagination  --}}
<nav class="pagination" role="navigation" aria-label="pagination">
  <a class="pagination-previous">Previous</a>
  <a class="pagination-next">Next page</a>
  <ul class="pagination-list">
    {{#each pages}}
      <li>
        <a class="pagination-link" href="/quotations/{{this}}">{{this}}</a>
      </li>
    {{/each}}
  </ul>
</nav>

<script src="/javascripts/quotations/quotationList.js"></script>