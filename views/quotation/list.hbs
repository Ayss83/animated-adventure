{{!-- titre  --}}
<div class="column is-2"> 
</div>

<div class="column has-text-centered">       
  <h3 class="title is-3 is-centered">Quotations List</h3>
</div>

<div class="column is-2"> 
</div>

{{!-- colonnes   --}}
<div class="columns">
  <div class="column is-1 is-hidden-mobile"> 
  </div>

  <div class="column"> 
      <div class="box">
          <div class="columns has-text-centered has-text-weight-bold is-hidden-mobile" height="30">
              <div class="column">
                Quotation number
              </div>
            
              <div class="column">
                Customer       
              </div>
          
              <div class="column ">
                Amount 
              </div>
    
              <div class="column ">
                Establishment date
              </div>
        
              <div class="column ">
                Accepted
              </div>
          </div>

{{!-- for each   --}}
      {{#each quotationsList}}
      
        <div class="columns has-text-centered is-fullheight tr" height="20">
            <div class="column is-striped is-hoverable">
              {{this.quotationNumber}}
            </div>
          
            <div class="column is-striped is-hoverable">
              {{this.customer.firstName}} {{this.customer.lastName}}     
            </div>
        
            <div class="column is-hidden-mobile is-striped is-hoverable">
              {{this.amount}}
            </div>
  
            <div class="column is-hidden-mobile is-striped is-hoverable">
              {{this.convertedDate}}
            </div>
       
            <div class="column is-hidden-mobile is-striped is-hoverable">
              {{#if this.accepted}} Yes {{else}} No {{/if}}
            </div>
        </div>
          {{/each}}  
    </div> 
  </div>
  
  <div class="column is-1 is-hidden-mobile"> 
  </div>
 
</div>

{{!-- bouton   --}}
<div class="columns">
    <div class="column is-1 is-hidden-mobile"> 
    </div>
    <div class="column"> 
      <a class="button {{navColor}} is-centered" href="/quotations/new">
        <h2>New Quotation</h2>
      </a>  
    </div>
  </div>


{{!-- pagination  --}}
<div class="columns">

  <div class="column is-1 is-hidden-mobile "></div>
  
  <div class="column {{navColor}} is-Outlined">
     <nav class="pagination {{navColor}} is-Outlined" role="navigation" aria-label="pagination">
      <a class="pagination-previous {{navColor}} is-Outlined">Previous</a>
      <a class="pagination-next {{navColor}} is-Outlined">Next page</a>
      <ul class="pagination-list {{navColor}} is-Outlined">
        {{#each pages}}
          <li>
            <a class="pagination-link {{navColor}} is-Outlined" href="/quotations/{{this}}">{{this}}</a>
          </li>
        {{/each}}
      </ul>
    </nav>
  </div>
   
  <div class="column is-1 is-hidden-mobile"></div>
</div>

<script src="/javascripts/quotations/quotationList.js"></script>