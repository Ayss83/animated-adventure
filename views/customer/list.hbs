{{!-- titre  --}}
<div class="column is-2"> 
</div>

<div class="column has-text-centered">       
  <h3 class="title is-3 is-centered">Customers' List</h3>
</div>

<div class="column is-2"> 
</div>

{{!-- colonnes   --}}
<div class="columns">
  <div class="column is-1 is-hidden-mobile"> 
  </div>

  <div class="column"> 
      <div class="box">
          <div class="columns has-text-centered has-text-weight-bold is-hidden-mobile" height="30">
            
              <div class="column is-hidden-mobile">
              Name     
              </div>
    
              <div class="column ">
                Phone
              </div>

              <div class="column is-hidden-mobile">
                Email      
              </div>
      
             
              <div class="column is-hidden-mobile">
                Address      
              </div>
        
              <div class="column is-hidden-mobile">
                Address Details
              </div>

             <div class="column is-hidden-mobile">
                Zip code      
              </div>
        
              <div class="column is-hidden-mobile">
                City
              </div>

               <div class="column is-hidden-mobile"> 
              </div>
          </div>

{{!-- for each   --}}
      {{#each customersList}}
        <div class="columns has-text-centered is-gapless tr" height="20">          
            <div class="column">
              {{this.firstName}} {{this.lastName}}     
            </div>

            <div class="column">
              {{this.phone}} 
            </div>
       
            <div class="column is-hidden-mobile">
              {{this.email}}
            </div>

            <div class="column is-hidden-mobile">
              {{this.address1}} 
            </div>
       
            <div class="column is-hidden-mobile">
             {{this.address2}} 
            </div>

            <div class="column is-hidden-mobile">
              {{this.zipCode}} 
            </div>
       
            <div class="column is-hidden-mobile">
             {{this.city}} 
            </div>

            <div class="column is-hidden-mobile">
              <a type="button" class="button {{navColor}} is-centered is-outlined is-small " href="customers/view">Upddate</a>
            </div>
        </div>
          {{/each}}  
    </div> 
  </div>
  
  <div class="column is-1 is-hidden-mobile"> 
  </div>
 
</div>

{{!-- bouton   --}}
<div class="columns">
    <div class="column is-1 is-hidden-mobile"> 
    </div>
    <div class="column"> 
      <a class="button {{navColor}} is-centered" href="/customers/new">
        <h2>New customer</h2>
      </a>  
    </div>
  </div>


{{!-- pagination  --}}
<div class="columns">

  <div class="column is-1 is-hidden-mobile "></div>
  
  <div class="column {{navColor}} is-Outlined">
     <nav class="pagination {{navColor}} is-Outlined" role="navigation" aria-label="pagination">
      <a class="pagination-previous {{navColor}} is-Outlined">Previous</a>
      <a class="pagination-next {{navColor}} is-Outlined">Next page</a>
      <ul class="pagination-list {{navColor}} is-Outlined">
        {{#each pages}}
          <li>
            <a class="pagination-link {{navColor}} is-Outlined" href="/quotations/{{this}}">{{this}}</a>
          </li>
        {{/each}}
      </ul>
    </nav>
  </div>
   
  <div class="column is-1 is-hidden-mobile"></div>
</div>

<script src="/javascripts/customers/customerList.js"></script>